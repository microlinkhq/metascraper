  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/microlinkhq/metascraper.git"
  },
  "bugs": {
    "url": "https://github.com/microlinkhq/issues"
  },
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "browser-sync": "latest",
    "concurrently": "latest",
    "eachdir": "latest",
    "finepack": "latest",
    "git-authors-cli": "latest",
    "got": "latest",
    "gulp": "latest",
    "gulp-autoprefixer": "latest",
    "gulp-concat": "latest",
    "gulp-cssnano": "latest",
    "gulp-strip-css-comments": "latest",
    "gulp-uglify": "latest",
    "husky": "latest",
    "lerna": "latest",
    "lint-staged": "latest",
    "mkdirp": "latest",
    "npm-check-updates": "latest",
    "prettier-standard": "latest",
    "rimraf": "latest",
    "standard": "latest",
    "standard-markdown": "latest"
  },
  "engines": {
    "node": ">= 8"
  },
  "scripts": {
    "build": "gulp build",
    "clean": "rm -rf node_modules && cd packages && eachdir rm -rf node_modules",
    "dev": "concurrently \"gulp\" \"npm run server:dev\"",
    "lint": "standard-markdown README.md && standard",
    "postinstall": "lerna bootstrap --no-ci && lerna link --force-local",
    "prerelease": "npm run update:check",
    "pretest": "npm run lint",
    "preversion": "npx lerna exec \"npx git-authors-cli || true; npx finepack\" --parallel",
    "release": "lerna publish --sort --conventional-commits -m \"chore(release): %s\"",
    "server:dev": "browser-sync start --server --files \"index.html, README.md, static/**/*.(css|js)\"",
    "test": "lerna exec npm run test",
    "update": "lerna exec ncu -- -u",
    "update:check": "lerna exec ncu -- --error-level 2"
  },
  "private": true,
  "license": "MIT",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "prettier-standard",
        "git add"
      ],
      "package.json": [
        "finepack",
        "git add"
      ]
    },
    "ignore": [
      "static/*.{js, css}"
    ]
  },
  "standard": {
    "env": [
      "mocha"
    ]
  }
}
